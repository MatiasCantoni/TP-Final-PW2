<div class="background">
    <div class="circle c1"></div>
    <div class="circle c2"></div>
    <div class="circle c3"></div>
    <div class="circle c4"></div>
</div>

<div class="validation-card">
    {{#error}}
        <div class="alert alert-danger" role="alert">{{error}}</div>
    {{/error}}

    <h2>Verificación de Token</h2>
    <p>Ingrese el token que le enviamos a su correo electrónico</p>

    <form action="/TP-Final-PW2/user/segundaValidacionToken" method="post">
        <input type="text" name="token" placeholder="Token de validación" required>
        <button type="submit">Validar</button>
    </form>
</div>
