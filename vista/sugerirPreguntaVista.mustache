<div class="container">
<h2>Sugerir pregunta</h2>
{{#exito}}
    <p> {{exito}} </p>
{{/exito}}
    <form method="POST" action="/inicio/enviarPreguntaSugerida">
        <input type="hidden" name="id_usuario" value="{{idUsuario}}">
        <div>
            <label for="texto"> Ingrese la pregunta</label>
            <input type="text" name="texto" id="texto">
        </div>    
        <div>
            <label for="opcion_a">Ingrese las opciones</label>
            <input type="text" name="opcion_a" id="opcion_a" placeholder="ingrese opcion A">

            <input type="text" name="opcion_b" id="opcion_b" placeholder="ingrese opcion B">

            <input type="text" name="opcion_c" id="opcion_c" placeholder="ingrese opcion C">

            <input type="text" name="opcion_d" id="opcion_d" placeholder="ingrese opcion D">
        </div>
        <div>
            <label for="correcta">Indique la opcion correcta</label>
            <select name="correcta" id="correcta">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>

            <label for="categoria">Ingrese la categor√≠a</label>
            <input type="text" name="categoria" id="categoria" >
        </div>
        <div class="mt-4">
            <input type="submit" value="Enviar">
            <a href="/inicio/" class="btn bg-primary">Volver al inicio</a>
        </div>
    </form>
</div>