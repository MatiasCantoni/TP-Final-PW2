<div class="background">
    <div class="circle c1"></div>
    <div class="circle c2"></div>
    <div class="circle c3"></div>
    <div class="circle c4"></div>
</div>

<div class="login-card text-center">
    <div class="title">
        <img src="/TP-Final-PW2/assets/img/triviaGo.png" alt="Logo" style="width:50%" />
        <p>¡Completá tus datos para unirte!</p>
    </div>

    <form action="/TP-Final-PW2/user/registerValidation" method="post" enctype="multipart/form-data">
        {{#error}}
            <div class="alert alert-danger" role="alert">{{error}}</div>
        {{/error}}

        <div class="mb-3 text-start">
            <label for="n-completo" class="form-label">Nombre Completo</label>
            <input type="text" class="form-control" id="n-completo" name="n-completo" placeholder="Ingrese su nombre completo" required>
        </div>
        <div class="mb-3 text-start">
            <label for="anio" class="form-label">Año de Nacimiento</label>
            <input type="number" class="form-control" id="anio" name="anio" placeholder="Ingrese su año de nacimiento" required>
        </div>
        <div class="mb-3 text-start">
            <label for="sexo" class="form-label">Sexo</label>
            <select class="form-control" id="sexo" name="sexo">
                <option value="masculino">Masculino</option>
                <option value="femenino">Femenino</option>
                <option value="Prefiero no cargarlo">Prefiero no cargarlo</option>
            </select>
        </div>
        <div class="mb-3 text-start">
            <label for="correo" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo electrónico" required>
        </div>
        <div class="mb-3 text-start">
            <label for="usuario" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese su usuario" required>
        </div>
        <div class="mb-3 text-start">
            <label for="contrasena" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Ingrese su contraseña" required>
        </div>
        <div class="mb-3 text-start">
            <label for="foto" class="form-label">Foto de Perfil</label>
            <input type="file" class="form-control" id="foto" name="foto" accept="image/*">
        </div>

        <div class="mb-3 text-start">
            <label for="pais" class="form-label">País</label>
            <input type="text" class="form-control" id="pais" name="pais" value="Argentina" required>
        </div>
        
        <div class="mb-3 text-start">
            <label for="ciudad" class="form-label">Ciudad</label>
            <input type="text" class="form-control" id="ciudad" name="ciudad" value="Buenos Aires" required>
        </div>
        
        <div class="mb-3 text-start">
            <label class="form-label">Ubicación (haz click en el mapa para seleccionar)</label>
            <div id="mapa" style="height: 250px; width: 100%; margin-top: 5px; border-radius: 5px;"></div>
            <p id="ubicacion-seleccionada" style="margin-top: 10px; font-weight: bold; color: #333;"></p>
        </div>

    <!-- Eliminados inputs hidden duplicados que sobrescribían los valores visibles -->

        <button type="submit" class="btn btn-custom">Registrarse</button>
    </form>

    <div class="container signin mt-3">
        <p>¿Ya tienes una cuenta? <a href="/TP-Final-PW2/user/">Inicia sesión</a>.</p>
    </div>
</div>

<script src="/TP-Final-PW2/assets/js/register.js" defer></script>