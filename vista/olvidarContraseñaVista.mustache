<form action="/TP-Final-PW2/user/recuperarContrasena" method="post">
    {{#error}}
        <div class="alert alert-danger" role="alert">{{error}}</div>
    {{/error}}
    <div class="container">
        <h2>Recuperar Contraseña</h2>
        <p>Ingrese su correo, usuario y la nueva contraseña a continuacion</p>
        <label for="email"><b>Correo Electrónico</b></label>
        <input type="text" placeholder="Ingrese su correo" name="email" required>

        <label for="usuario"><b>Nombre de Usuario</b></label>
        <input type="text" placeholder="Ingrese su nombre de usuario" name="usuario" required>

        <label for="nueva-contrasena"><b>Nueva Contraseña</b></label>
        <input type="password" placeholder="Ingrese su nueva contraseña" name="nueva-contrasena" required>
    </div>
    <button type="submit" class="btn btn-custom">Recuperar Contraseña</button>
    <a href="/TP-Final-PW2/user/">Volver al inicio de sesión</a>
</form>